# MCP Search Hub - Development Environment Configuration

# Server configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=DEBUG  # More verbose logging for development
TRANSPORT=streamable-http

# Caching configuration - shorter TTLs for development
CACHE_TTL=60                    # Short cache TTL for faster iteration
CACHE_MEMORY_TTL=60             # 1 minute memory cache for development
CACHE_REDIS_TTL=300             # 5 minutes Redis cache for development
REDIS_URL=redis://redis:6379
REDIS_CACHE_ENABLED=false       # Off by default in development
CACHE_FINGERPRINT_ENABLED=true

# Budget - Higher for development to avoid limitations
DEFAULT_BUDGET=0.5

# Provider API Keys (REQUIRED)
FIRECRAWL_API_KEY=fc_api_key_xxxxx
EXA_API_KEY=exa_api_key_xxxxx
PERPLEXITY_API_KEY=pplx-xxxxxx
LINKUP_API_KEY=lp_xxxxxxxx
TAVILY_API_KEY=tvly-xxxxxxxx

# Rate limits - Higher for development
EXA_REQUESTS_PER_MINUTE=100
EXA_CONCURRENT_REQUESTS=20

# Budgets - Higher for development
EXA_DEFAULT_QUERY_BUDGET=0.10
EXA_DAILY_BUDGET=50.00
EXA_ENFORCE_BUDGET=false  # Disable budget enforcement in development

# Middleware - Simplified for development
MIDDLEWARE_LOGGING_ENABLED=true
MIDDLEWARE_AUTH_ENABLED=false  # Disable auth for easier development
MIDDLEWARE_RATE_LIMIT_ENABLED=false  # Disable rate limiting for easier development
MIDDLEWARE_RETRY_ENABLED=true
EOF < /dev/null